<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.5"?>
<plugin>

  <extension point="org.eclipse.ui.popupMenus"> 
    <viewerContribution id="org.eclipse.ui.articles.action.contribution.popup.editor" targetID="#TextEditorContext"> 
     
     <action
           id="org.apertium.api.translate.actions.TranslateAction" 
           label="Translate"
           icon="icons/apertium_res.png"
           menubarPath="additions" 
           class="org.apertium.api.translate.actions.TranslateAction"> 
     </action>
        
     </viewerContribution> 
  </extension>

  <extension point="org.eclipse.ui.actionSets">
  	 <actionSet
           label="Sample Action Set"
           visible="true"
           id="org.apertium.api.translate.actionSet">
     <action
           id="org.apertium.api.translate.actions.ConfigTranslateAction" 
           label="Configure the Translator" 
           icon="icons/apertium_res.png"
           tooltip="Configure the Translator"
           menubarPath="TranslatorMenu/TranslatorGroup"
           toolbarPath="TranslatorGroup"
           class="org.apertium.api.translate.actions.ConfigTranslateAction"> 
        </action> 
        </actionSet>
  </extension>

  <extension point="org.eclipse.ui.startup">
      <startup class="org.apertium.api.translate.Activator"></startup>
  </extension>

</plugin>
